<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.as.testkaixin" >

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.WelcomPageActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.bs.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/LoginTheme" >
        </activity>
        <activity
            android:name=".view.bs.CheckNumberActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/LoginTheme" >
            <intent-filter>
                <action android:name="android.intent.action.LOGIN_CHECK" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.bs.GuidActivity"
            android:label="@string/title_activity_guid" >
        </activity>
    </application>

</manifest>
